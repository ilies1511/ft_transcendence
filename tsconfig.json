{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": [
				"node",
				"babylonjs"
		],
    
    /* Bundler mode */
    "moduleResolution": "nodenext", // Set moduleResolution to "bundler", "node16", or "nodenext" (recommended for ESM projects)
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Path resolution */
    "baseUrl": ".", // Added for path mapping
    "paths": {
	  "@shared/*": ["./game_shared/*"],
      "@/*": ["./client/*"] // Alias for client directory
    },

    /* Node.js compatibility */
    "esModuleInterop": true, // Added for better CJS/ESM interop
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "client/**/*",  // Client-side code
    "server/**/*",  // Server-side code
    "server/**/**/*",  // Server-side code
	"game_shared/*",
	"game_shared/**/*",
    "vite.config.ts"
  ]
}

FROM node:22-alpine

WORKDIR /app

# COPY core/*.json ./core/
COPY . .

RUN cd core && npm ci
RUN cd core/frontend && npm install && npm ci
RUN cd core/backend && npm install && npm ci

RUN apk add --no-cache make

RUN apk update && apk add bash

RUN echo 'alias dev="npm run dev"' >> /etc/bash/bashrc

ENTRYPOINT [ "./init.sh" ]


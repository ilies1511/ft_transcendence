{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "NodeNext",
	  "moduleResolution": "NodeNext",
	  "rootDir": "src",
	  "outDir": "dist",
	  "strict": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "allowImportingTsExtensions": true,
	  "verbatimModuleSyntax": true,
	  "moduleDetection": "force",
	  "noEmit": true,
	},
	"include": ["src/**/*"]
  }

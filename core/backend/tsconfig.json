{
	"compilerOptions": {
		// "lib": [
		// 	"es5",
		// 	"es6",
		// 	"dom",
		// 	"dom.iterable"],
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": "./src",
		"outDir": "dist",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		// "allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		// "noEmit": true,
		"noEmit": false,
	},
	"include": [
		"src/**/*",
		"src/constants",
		"src/types/fastify.d.js"
	],
	"exclude": ["node_modules", "dist", "tests"]
}
